/* pages/list/list.wxss */
.search {
    display: flex;
    justify-content: space-between;
    margin: 20rpx 30rpx;
    padding: 10rpx 20rpx;
    border-radius: 10rpx;
    background-color: #fff;
    font-size: 32rpx;
}
.search input {
    width: 100%;
}
.list {
    display: flex;
    flex-direction: column;
    background-color: #fff;
}
.item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx;
    font-size: 20rpx;
    color: #666;
    border-bottom: 1rpx solid #f0f0f0;
}
.item image {
    width: 120rpx;
    height: 120rpx;
}
.detail {
    display: flex;
    flex: 1;
    flex-direction: column;
    margin-left: 20rpx;
}
.detail text:nth-of-type(1) {
    font-size: 28rpx;
    color: #333;
}
.item .score {
    padding: 0 10rpx;
    background-color: orangered;
    color: #fff;
    border-radius: 20rpx;
}
.loadMore {
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 28rpx;
    color: #888;
    background-color: #f0f0f0;
}
